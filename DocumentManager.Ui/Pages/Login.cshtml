@page
@model DocumentManager.Ui.Pages.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<h1>Вход</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Model.Email" class="form-label">Email</label>
        <input asp-for="Model.Email" class="form-control" type="email" />
        <span asp-validation-for="Model.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model.Password" class="form-label">Пароль</label>
        <input asp-for="Model.Password" class="form-control" type="password" />
        <span asp-validation-for="Model.Password" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit" disabled="@Model.IsSubmitting">
        @(Model.IsSubmitting ? "Вход..." : "Войти")
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            setTimeout(function() {
                window.location.href = '@Url.Page("/Index")';
            }, 500);
        </script>
    }
}
